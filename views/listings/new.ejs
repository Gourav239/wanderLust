<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2 mt-3">
    <h3>Create a new Listing</h3>

    <form
      method="post"
      action="/listings/new"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label> 
        <input
          id="title" 
          name="listing[title]"
          placeholder="Enter Title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please give a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          placeholder="Write description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please write description.</div>
      </div>

      <!-- Image URL -->
      <!-- <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          id="image"
          name="listing[image]"
          placeholder="Paste image url/link"
          type="text"
          class="form-control"
        />
      </div> -->

      <!-- Image file -->
        <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          id="image"
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>

      <!-- Price -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            id="price"
            name="listing[price]"
            placeholder="000/-"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price is missing!</div>
        </div>

        <!-- Country -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            id="country"
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter your country</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          placeholder="Kanpur, Uttar Pradesh"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter your location.</div>
      </div>

      <!-- Submit -->
      <button class="btn btn-dark mt-4">Add Listing</button>
      <br /><br />
    </form>
  </div>
</div>
