<% layout('/layouts/boilerplate') -%>
<div class="row mt-3 mb-4">
  <div class="col-8 offset-2">
    <h3><%= data.title %></h3>
  </div>
  <div class="card col-6 offset-2 listing-card">
    <img
      src="<%= data.image.url %>"
      class="card-img-top show-img"
      alt="listing image"
    />

    <div class="card-body">
      <p class="card-text">
        <i><b><%= data.owner.username %></b></i> <br />
        <%= data.description %> <br />
        &#8377; <%= data.price.toLocaleString("en-IN") %> <br />
        <%= data.location %>, <br />
        <%= data.country %>
      </p>
    </div>
  </div>

  <% if(currUser) {%>
  <div class="btns offset-2">
    <a href="/listings/<%= data._id%>/edit" class="btn btn-dark edit-btn"
      >Edit</a
    >

    <form
      method="post"
      action="/listings/<%= data._id%>?_method=Delete"
      onsubmit="return confirm('Are you sure you want to delete this listing?');"
    >
      <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- In your HTML -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  
  <div class="col-8 offset-2 mb-3">
  <hr>
  <div id="map" style="height: 400px; width: 600px"></div>
</div>
<script>
  const map = L.map('map').setView([28.6139, 77.2090], 6); // India center

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  // Example tourist places
  const places = [
    { name: "Taj Mahal", coords: [27.1751, 78.0421] },
    { name: "Gateway of India", coords: [18.9218, 72.8347] },
    { name: "Golden Temple", coords: [31.6200, 74.8765] },
  ];

  places.forEach(place => {
    L.marker(place.coords)
      .addTo(map)
      .bindPopup(`<b>${place.name}</b>`);
  });
</script>


  <div class="col-8 offset-2 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      method="post"
      action="/listings/<%= data.id  %>/reviews"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          cols="20"
          rows="2"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please submit some comments for review
        </div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr />

    <P><b>All Reviews</b></P>
    <div class="row">
      <% for(review of data.reviews) {%>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <form
          class="mb-2"
          method="post"
          action="/listings/<%=data._id%>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-dark btn-sm">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
