<% layout('/layouts/boilerplate') -%>

<div class="tax-toggle mt-3 mb-3 ms-2">
  <div class="form-check form-switch form-check-reverse">
    <input class="form-check-input" type="checkbox" id="switchCheckReverse" />
    <label class="form-check-label" for="switchCheckReverse">
      Display total after taxes
    </label>
  </div>
</div>

<div class="mb-3 ms-2"><h4>These Might Be Exactly What You Need!</h4></div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allList){ %>
  <a href="<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
      />

      <div class="card-img-overlay">Visit</div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %>/ night
          <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
